<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCRUD.frmEmpleado"
             Title="frmEmpleado">
    <StackLayout>
        <Label Text="Id" />
        <Entry Text="{Binding Id}" />
        <Label Text="Nombre" />
        <Entry Text="{Binding Nombre}" />
        <Label Text="Apellido" />
        <Entry Text="{Binding Apellido}" />
        <Label Text="Edad" />
        <Entry Text="{Binding Edad}" />
        <Label Text="Cargo" />
        <Entry Text="{Binding Cargo}" />
        <Button Text="Guardar" Clicked="async (sender, args) => await GuardarButton_Clicked()" />
    </StackLayout>
</ContentPage>